<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.Manet.AppManet.ManetWifiDirectProyecto.Activities.ActivityMenuInicial"


    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/background" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The\nManet\nNetwork"
        android:paddingTop="10dp"
        android:id="@+id/textView2"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#000000"
        android:singleLine="false"
        android:textStyle="normal"
        android:typeface="monospace"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button

        android:text="Config"
        android:id="@+id/buttonConfiguracion"
        android:drawableTop="@android:drawable/ic_menu_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:paddingTop="20dp"
        android:background="@drawable/round_smallbutton"
        android:layout_alignTop="@+id/ButtonAyuda"
        android:layout_toStartOf="@+id/buttonCerrarAplicacion"
        android:layout_toLeftOf="@+id/buttonCerrarAplicacion"
        android:textColor="#000000" />

    <Button

        android:text="Ayuda"
        android:drawableTop="@android:drawable/ic_menu_help"
        android:id="@+id/ButtonAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:paddingTop="20dp"
        android:background="@drawable/round_smallbutton"
        android:layout_below="@+id/buttonFasesAutomatico"
        android:layout_toEndOf="@+id/buttonCerrarAplicacion"
        android:layout_toRightOf="@+id/buttonCerrarAplicacion"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonFasesAutomatico"
        android:text="Iniciar\n Proceso"
        android:drawableTop="@android:drawable/ic_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:paddingTop="25dp"
        android:background="@drawable/round_normalbutton"

        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button

        android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
        android:text="Salir"
        android:id="@+id/buttonCerrarAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:background="@drawable/round_verysmallbutton"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:layout_below="@+id/ButtonAyuda"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
