<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Manet.AppManet.ManetWifiDirectProyecto.Activities.ActivityMenuInicial"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/background" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The\nManet\nNetwork"
        android:id="@+id/textView2"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#000000"
        android:singleLine="false"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp">

    </LinearLayout>

    <Button

        android:text="Config"
        android:id="@+id/buttonConfiguracion"
        android:drawableTop="@android:drawable/ic_menu_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:background="@drawable/round_smallbutton"
        android:layout_alignTop="@+id/ButtonAyuda"
        android:layout_toStartOf="@+id/buttonCerrarAplicacion"
        android:layout_toLeftOf="@+id/buttonCerrarAplicacion" />

    <Button

        android:text="Ayuda"
        android:drawableTop="@android:drawable/ic_menu_help"
        android:id="@+id/ButtonAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:background="@drawable/round_smallbutton"
        android:layout_above="@+id/buttonCerrarAplicacion"
        android:layout_toRightOf="@+id/buttonCerrarAplicacion"
        android:layout_toEndOf="@+id/buttonCerrarAplicacion" />

    <Button
        android:id="@+id/buttonFasesAutomatico"
        android:text="Iniciar\nProceso"
        android:drawableTop="@android:drawable/ic_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:background="@drawable/round_normalbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button

        android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
        android:text="Salir"
        android:id="@+id/buttonCerrarAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:background="@drawable/round_verysmallbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

</RelativeLayout>
