<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"

    android:color="#ffffff"
    >

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size android:height="125dp"/>
            <size android:width="125dp"/>
            <gradient
                android:startColor="#15a1ff"
                android:centerColor="#1071b4"
                android:endColor="#15a0ff"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#0c588d"/>
            <gradient
                android:startColor="#1077be"
                android:centerColor="#0d5e95"
                android:endColor="#1077be"
                android:angle="270" />
        </shape>
    </item>
</selector>